<h2>Sign up</h2>
<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "first-name" } %>
      <%= f.input :last_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "last-name" } %>
      <%= f.input :date_of_surgery,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "date-of-surgery" } %>
      <%= f.input :age,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "age" } %>
      <%= f.input :sex,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "biological-sex" } %>
      <%= f.input :height,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "height-in-cm" } %>
      <%= f.input :target_weight,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "target-weight" } %>
      <%= f.input :weight_before_surgery,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "weight-before-surgery" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
