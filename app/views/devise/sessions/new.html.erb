<div class="container" id="page-container">
  <div class="d-flex justify-content-center" style="margin-top: 40px;">
    <div  class="center-form">
      <div class="container d-flex justify-content-center flex-column align-items-center">
        <span class="mt-2" style="font-size: 26px">
          <i style="padding-right: 10px" class="fa-solid fa-arrow-right-to-bracket"></i>Log In</span>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
            <div class="form-inputs mt-3">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions mb-2">
              <%= f.button :submit, "Log in", class:"btn-dark-green" %>
            </div>
          <% end %>

          <span class   ="mb-3">Not a member yet? <%= render "devise/shared/links" %> </span>
      </div>
    </div>
  </div>
</div>

<div class="d-flex justify-content-end mt-4 bg-image  container-walker-image" >
  <%= image_tag("walker.png", width: 260, height: 260, class: "image-walker")%>
</div>

<div class="footer" style="background-color: #98C9A3; height: 60px;">
  <div class="footer-links">
    <a href="#"><i class="fab fa-github"></i></a>
    <a href="#"><i class="fab fa-instagram"></i></a>
    <div class= "btn-home rounded-circle">
      <%= image_tag("home.png", width: 40, height: 40)%>
    </div>
    <a href="#"><i class="fab fa-twitter"></i></a>
    <a href="#"><i class="fab fa-linkedin"></i></a>
  </div>
</div>

