<%= provide :title, "Prescriptions" %>
<div class="container mt-4 animate__animated animate__fadeInDown" style="text-align: center">
  <%= image_tag("prescription-img.png", width: 100, height: 100) %>
  <h2 class="d-flex justify-content-center">
    <%= link_to "Add new prescription", new_prescription_path, class: "prescription-link mt-4 btn-purple-narrow" %>
  </h2>
  <div class="container">
    <div class="row mt-5">
      <% @prescriptions.each do |prescription| %>
        <div class="col-md-6 animate__animated animate__fadeInDown">
          <div class="d-flex card-prescription-style green-shadow rounded-l mb-4 align-items-center">
            <div class="prescription-title color-purple">
              <h3 style="margin: 0;"><strong><%= prescription.title%></strong></h3>
            </div>
            <div class="prescription-icons">
              <%= link_to "", prescription_path(prescription), class: "fa-solid fa-magnifying-glass d-flex align-self-end details-icon color-purple" %>
              <%= link_to "",
                prescription_path(prescription),
                data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "fa-solid fa-trash d-flex align-self-end trash-icon color-purple"
                %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
