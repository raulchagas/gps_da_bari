<div class="container">

  <div class="mb-3">
    <%= form_with url: recipes_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control  recipes-search",
        placeholder: "Find a recipe"
      %>
      <%= submit_tag "Search", class: "btn btn-dark-green mx-2  recipes-search" %>
      <%= link_to "Clear", recipes_path, class: "btn btn-light-green  recipes-search" %>
    <% end %>
  </div>

  <div class="recipes-grid">
    <% @recipes.each do |recipe|%>
      <div class="card-recipe recipe-width rounded">
        <img src="https://source.unsplash.com/random/300Ã—150/?<%= recipe.title.gsub(" ","-")%>">
        <div class="card-recipe-infos">
          <h2><%= recipe.title %></h2>
          <p>Prep time: <%= recipe.prep_time %> min</p>
          <p>Calories: <%= recipe.calories %> kcal</p>
          <%= link_to "See Details", recipe_path(recipe), class:"btn-light-dark-sm rounded" %>
        </div>
      </div>
    <% end %>
  </div>

</div>
