<div class="container">

  <div class="mb-3 mt-2">
    <%= form_with url: recipes_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control  recipes-search",
        placeholder: "Find a recipe"
      %>
      <%= submit_tag "Search", class: "btn btn-recipe-dark-green mx-2 " %>
      <%= link_to "Clear", recipes_path, class: "btn btn-recipe-light-green " %>
    <% end %>
  </div>

  <div class="recipes-grid">
    <% @recipes.each do |recipe|%>
      <% recipe = recipe["recipe"]%>
      <div class="card-recipe recipe-width rounded">
        <img src=<%= recipe["image"]%>>
        <div class="card-recipe-infos">
          <h2><%= recipe["label"] %></h2>
          <p>Prep time: <%= number_to_human(recipe["totalTime"], precision: 0) %> min</p>
          <p>Calories: <%= number_to_human(recipe["calories"], precision: 0) %> kcal</p>
          <% recipe_id = recipe["uri"].scan(/(?<=_).*/)%>
          <%= link_to "See Details", recipe_path(recipe_id), class:"btn-light-grey-sm rounded"%>
        </div>
      </div>
    <% end %>
  </div>>
