<%= form_with url: recipes_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a recipe"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
  <%= link_to "Clear", recipes_path, class: "btn btn-secondary" %>
<% end %>

<ul>
  <% @recipes.each do |recipe|%>
    <div class="card">
      <div class="card-title">Recipe name: <%= recipe.title %></div>
      <span>Description: <%= recipe.description %></span>
      <span>Prep time: <%= recipe.prep_time %> min</span>
      <span><%= recipe.calories %> calories</span>
      <%= link_to "See Details", recipe_path(recipe) %>
    </div>
  <% end %>
</ul>
